<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:indicator="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zzq.viewpagerindicator.TitlePageIndicator
        android:id="@+id/indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        indicator:indicator_base_indicator_line_height="1dp"
        indicator:indicator_horizontal_space="20dp"
        indicator:indicator_line_color="@android:color/white"
        indicator:indicator_line_height="2dp"
        indicator:indicator_selected_color="#FF0000"
        indicator:indicator_text_size="20sp"
        indicator:indicator_to_text="5dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>